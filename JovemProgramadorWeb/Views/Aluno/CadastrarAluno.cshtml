@{
    Layout = "_LayoutAluno";
}

@if (TempData["MsgErro"] != null)
{
	<div class="alert alert-danger text-center mb-3">
		@TempData["MsgErro"]
	</div>
}
@model  Aluno

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <h3 class="text-center mb-4">Cadastro de Aluno</h3>

        <form asp-controller="Aluno" asp-action="CadastrarNovoAluno" method="post">

            <div class="mb-3">
                <label class="form-label">Matricula</label>
                <input type="text" asp-for="Matricula" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">CPF</label>
                <input type="text" asp-for="CPF" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Data de Nascimento</label>
                <input type="text" asp-for="DataNascimento" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" asp-for="Email" class="form-control">
            </div>


            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-controller="Aluno" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>
