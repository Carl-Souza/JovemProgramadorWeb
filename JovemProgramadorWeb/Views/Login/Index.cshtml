@{
    Layout = "_LayoutLogin";
}

@if (TempData["MsgErro"] != null)
{
    <div class="alert alert-danger text-center mb-3">
        @TempData["MsgErro"]
    </div>
}

@model Usuario

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <h3 class="text-center mb-4">Seja bem vindo!</h3>

        <form asp-controller="Login" asp-action="ValidaUsuario" method="post">
            <div class="mb-3">
                <label for="inputEmail4" class="form-label">Usuário</label>
                <input type="email" asp-for="Email" class="form-control" id="inputEmail4">
            </div>

            <div class="mb-3">
                <label for="inputPassword4" class="form-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" id="inputPassword4">
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-controller="Login" asp-action="Cadastro">Cadastre-se</a>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </form>
    </div>
</div>
