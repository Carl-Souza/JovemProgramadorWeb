@{
    Layout = "_LayoutLogin";
}
@if (TempData["MsgErro"] != null)
{
    <div class="alert alert-danger text-center mb-3">
        @TempData["MsgErro"]
    </div>
}

@model Usuario

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <h3 class="text-center mb-4">Cadastro de Usuário</h3>

        <form asp-controller="Login" asp-action="CadastrarUsuario" method="post">

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" asp-for="Email" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control">
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
            </div>
        </form>
    </div>
</div>
